<Page x:Class="LocalCrm.ReportsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:LocalCrm"
      xmlns:view="clr-namespace:LocalCrm.View"
      mc:Ignorable="d" 
      d:DesignHeight="300" d:DesignWidth="500"
      FontSize="{StaticResource DefaultFontSize}"
      Title="Отчеты">

    <Grid>
        <StackPanel>
            
            <view:PeriodControl/>
            <Button Click="Button_Click" Width="Auto" Margin="15,2,15,2">по дате</Button>
            <Button Width="Auto" Margin="15,2,15,2" Click="Button_Click_1">по трансп компаниям</Button>
            <Button Width="Auto" Margin="15,2,15,2" Click="Button_Click_2">по статусам</Button>
            
        </StackPanel>
    </Grid>
</Page>
